<Window x:Class="Wpf_RelojClima.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_RelojClima"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="urbanwall.jpg"/>
        </Grid.Background>
        <DataGrid HorizontalAlignment="Left" Height="482" Margin="-39,-42,-35,-21" VerticalAlignment="Top" Width="866" Opacity="0.5" Background="Black"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,378,0,0" VerticalAlignment="Top" Width="80" BorderBrush="White" Foreground="White" Height="31" BorderThickness="1" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
